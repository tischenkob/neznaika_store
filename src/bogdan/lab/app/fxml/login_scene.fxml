<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #36393F; -fx-opacity: 100;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bogdan.lab.controllers.LoginController">
   <children>
      <AnchorPane prefHeight="600.0" prefWidth="1000.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ImageView fitHeight="248.0" fitWidth="248.0" layoutX="326.0" layoutY="28.0" style="-fx-glow: 100;">
               <image>
                  <Image url="@../app/grumpy-cat-face-png-3.png" />
               </image>
            </ImageView>
            <TextField id="email_box" fx:id="emailTXT" alignment="CENTER" layoutX="245.0" layoutY="309.0" onAction="#buttonPressed" prefHeight="56.0" prefWidth="403.0" style="-fx-background-color: #E8F0FE;">
               <font>
                  <Font name="Proxima Nova Normal" size="24.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
               <effect>
                  <DropShadow />
               </effect>
            </TextField>
            <Button id="login_button" fx:id="nextBUTTTON" layoutX="280.0" layoutY="410.0" mnemonicParsing="false" onAction="#buttonPressed" prefHeight="44.0" prefWidth="335.0" style="-fx-background-color: #7289DA; -fx-text-fill: #FFFFFF;" text="Next" textAlignment="CENTER" textFill="#039be5" textOverrun="WORD_ELLIPSIS" wrapText="true">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <font>
                  <Font name="Calibri Light" size="24.0" />
               </font>
            </Button>
            <Button id="signup_button" fx:id="signupBUTTON" layoutX="218.0" layoutY="365.0" mnemonicParsing="false" onAction="#buttonPressed" prefHeight="30.0" prefWidth="106.0" style="-fx-background-color: transparent; -fx-text-fill: #5F82FF;" text="Sign up?" textAlignment="CENTER" textFill="#039be5" textOverrun="WORD_ELLIPSIS" wrapText="true">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Text fill="#ebebeb" layoutX="245.0" layoutY="302.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Email">
               <font>
                  <Font name="Calibri Light" size="18.0" />
               </font>
            </Text>
            <Text fx:id="incorrectSign" fill="#f52828" layoutX="659.0" layoutY="347.0" strokeType="OUTSIDE" strokeWidth="0.0" text="!" visible="false">
               <font>
                  <Font name="Calibri Bold" size="36.0" />
               </font>
            </Text>
            <Text fx:id="incorrectTip" fill="#ebebeb" layoutX="702.0" layoutY="340.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Incorrect email format" visible="false">
               <font>
                  <Font name="Calibri Light" size="18.0" />
               </font>
            </Text>
            <Text fx:id="signupText" fill="#ebebeb" layoutX="264.0" layoutY="565.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Your password was sent to your email. Press &quot;Next&quot;" textAlignment="CENTER" visible="false">
               <font>
                  <Font name="Calibri Light" size="18.0" />
               </font>
               <effect>
                  <DropShadow spread="0.66" />
               </effect>
            </Text>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
